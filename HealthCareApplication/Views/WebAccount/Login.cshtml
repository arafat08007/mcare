@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@model HealthCareApplication.Models.SiteInfo

@{Html.RenderPartial("_MyPartial");}



@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "InputForm" }))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-4 pt-20" style="float:none;margin:0 auto;">
            
                <h4 class="heading-title" style="color:Red">@ViewBag.LogedMessage @{ ViewBag.LogedMessage = ""; }</h4>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>Username</label>
                        @Html.TextBoxFor(m => m.LoginUser, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>Password</label>
                        @Html.TextBoxFor(m => m.LoginPass, new { @class = "form-control", @type = "password" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6"><a href="@("/WebAccount/LogForgotPassword")" class="btn-link">Forgot Password?</a></div>
                    <div class="form-group col-md-6"><a href="@("/WebAccount/LogRegistration")" class="btn-link" style="float:right">Registration</a></div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>

            </div>
        </div>
    </div>
}
    
