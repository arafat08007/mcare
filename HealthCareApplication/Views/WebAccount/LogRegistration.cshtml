@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@model HCare.Models.HcUsersEntity

@{Html.RenderPartial("_MyPartial");}



@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "InputForm" }))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-8 pt-20" style="float:none;margin:0 auto;">

                @if (!string.IsNullOrEmpty(ViewBag.FPMessage))
                {
                    <h4 class="heading-title text-info">@Html.Raw(ViewBag.FPMessage) @{ ViewBag.FPMessage = ""; }</h4>
                }
            
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>First Name <span class="text-danger"> *</span></label>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Last Name</label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>Email Address</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Mobile Number (User ID) <span class="text-danger"> *</span></label>
                        @Html.TextBoxFor(m => m.Logname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>Choose Password <span class="text-danger"> *</span></label>
                        @Html.TextBoxFor(m => m.Logpass, new { @class = "form-control", @type = "password" })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Re-enter Password <span class="text-danger"> *</span></label>
                        @Html.TextBoxFor(m => m.ConfirmPass, new { @class = "form-control", @type = "password" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>Date of Birth <span class="text-danger"> *</span></label>
                        @Html.TextBoxFor(m => m.SecurPass, new { @class = "form-control", @type = "date" })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Gender</label>
                        @{
                            int Count = 1;
                            foreach (SelectListItem dr in ViewBag.GenderList)
                            {
                            <div class="custom-control custom-radio custom-control-inline">
                                @Html.RadioButtonFor(m => m.Gender, @dr.Value, new { @class = "custom-control-input", @id = "Gender" + Count })
                                <label class="custom-control-label" >@dr.Text</label>
                            </div>
                            Count++;
                            }
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>Address</label>
                        @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @rows = "4" })
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Register Now</button>
                </div>

            </div>
        </div>
    </div>
}
